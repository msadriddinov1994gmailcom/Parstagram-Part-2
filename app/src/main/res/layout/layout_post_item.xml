<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLength="30"
        android:maxLines="1"
        android:text="Name"
        android:textColor="@color/logo"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/rv_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ellipsize="end"
        android:gravity="right"
        android:maxLength="25"
        android:maxLines="1"
        android:text="Time"
        android:textColor="@color/def"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toEndOf="@+id/rv_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ellipsize="end"
        android:gravity="left"
        android:linksClickable="true"
        android:autoLink="all"
        android:maxLength="45"
        android:maxLines="5"
        android:text="Description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toEndOf="@+id/rv_image"
        app:layout_constraintTop_toBottomOf="@+id/rv_name" />

    <ImageView
        android:id="@+id/rv_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>